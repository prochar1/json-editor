# Dockerfile-php
FROM php:8.2-apache

# Instalace GD extension pro práci s obrázky
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    libwebp-dev \
    && docker-php-ext-configure gd --with-freetype --with-jpeg --with-webp \
    && docker-php-ext-install gd \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Nastavení PHP limitů pro velké uploady
RUN echo "upload_max_filesize = 2G" > /usr/local/etc/php/conf.d/uploads.ini \
    && echo "post_max_size = 2G" >> /usr/local/etc/php/conf.d/uploads.ini \
    && echo "max_execution_time = 600" >> /usr/local/etc/php/conf.d/uploads.ini \
    && echo "max_input_time = 600" >> /usr/local/etc/php/conf.d/uploads.ini \
    && echo "memory_limit = 512M" >> /usr/local/etc/php/conf.d/uploads.ini

COPY public/php/ /var/www/html/php/
COPY public/data/ /var/www/html/data/
RUN chown -R www-data:www-data /var/www/html/data
EXPOSE 80
